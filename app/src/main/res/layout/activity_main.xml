<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".MainActivity">

    <com.getbase.floatingactionbutton.FloatingActionsMenu
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentEnd="true"


        android:layout_alignParentBottom="true"
        app:fab_addButtonColorNormal="@color/Pink"
        app:fab_addButtonColorPressed="@color/ColorPink"
        app:fab_addButtonPlusIconColor="@color/white"
        app:fab_labelStyle="@style/custmFab"
        >

        <com.getbase.floatingactionbutton.AddFloatingActionButton
            android:layout_width="wrap_content"
            android:layout_height="16dp"
            app:fab_colorNormal="@color/white"
            app:fab_colorPressed="@color/white_pressed"
            app:fab_size="mini"
            app:fab_icon="@drawable/ic_add_pink"
            android:id="@+id/action1"
            app:fab_title="Fab_Action_1"
            />

        <com.getbase.floatingactionbutton.AddFloatingActionButton
            android:layout_width="wrap_content"
            android:layout_height="16dp"
            app:fab_colorNormal="@color/white"
            app:fab_colorPressed="@color/white_pressed"
            app:fab_size="mini"
            app:fab_icon="@drawable/ic_add_pink"
            android:id="@+id/action2"
            app:fab_title="Fab_Action_2"
            />
    </com.getbase.floatingactionbutton.FloatingActionsMenu>
</RelativeLayout>